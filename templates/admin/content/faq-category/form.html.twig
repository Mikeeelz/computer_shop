<div class="col-xs-12">
  <div class="box box-primary">
    <div class="box-body">
      <form action="{{ url }}" method="post" enctype="multipart/form-data">
        <div class="form-group">
          <input type="checkbox"
                 id="published"
                 name="published"
                 class="icheck"
                 value="1"
                  {{ faqCategory.published ? 'checked' : '' }}
                 style="position: absolute; opacity: 0;"
          >
          <label class="control-label" for="published">Опубликовано</label>
        </div>

        <div class="form-group">
          <label class="control-label required" for="title">
            Заголовок
          </label>
          <input type="text"
                 id="title"
                 name="title"
                 required="required"
                 class=" form-control"
                 value="{{ faqCategory.title }}"
          >
        </div>

        <div class="form-group">
          <label class="control-label required" for="slug">
            Код
          </label>
          <input
                  type="text"
                  id="slug"
                  name="slug"
                  required="required"
                  class=" form-control"
                  value="{{ faqCategory.slug }}"
          >
        </div>

        <div class="form-group">
          <label class="control-label required" for="type">
            Тип
          </label>

          <select class="form-control" id="type" name="type">
            {% for option in ['customer', 'carrier'] %}
              <option value="{{ option }}" {{ faqCategory.type == option ? 'selected' : '' }}>{{ option }}</option>
            {% endfor %}
          </select>
        </div>

        <button type="submit" class="btn btn-success">Сохранить</button>
      </form>
    </div>
  </div>
</div>
